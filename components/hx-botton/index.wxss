.button_view{
  display: flex;
  justify-content: center;
  padding: 0 20px;
  height: 40px;
  width: 90%;
  background-color: #51a7d8;
  line-height: 40px;
  font-size: 0.9rem;
  color: white;
  border-radius: 5rpx;
  margin:30px auto;
  box-sizing: border-box;
}
.button_view:active{
  opacity: 0.98;
  transform: scale(1.02);
}
.circle_btn{
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  background-color: white;
  box-shadow: 0px 0px 1px 1px #cdcdcd;
}